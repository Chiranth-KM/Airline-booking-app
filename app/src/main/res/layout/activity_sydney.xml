<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".sydney_economy">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inria_sans"
            android:gravity="left"
            android:text="Bangalore -> Sydney"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/inria_sans"
            android:gravity="left"
            android:text="Onbound Flights"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/economy"
                android:fontFamily="@font/inria_sans"
                android:text="Economy"
                android:textColor="#FBFEFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/business"
                android:fontFamily="@font/inria_sans"
                android:onClick="clickbusi"
                android:text="Business"
                android:textColor="#434343"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="109dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="225dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/d" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#E6F3FC"
                android:fontFamily="@font/inria_sans"
                android:onClick="traveller"
                android:text="   From INR \n 145,093\n \nView"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="109dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="225dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/e" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#E6F3FC"
                android:fontFamily="@font/inria_sans"
                android:onClick="traveller"
                android:text="   From INR \n83,577\n \nView"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="109dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="225dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/f" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#E6F3FC"
                android:fontFamily="@font/inria_sans"
                android:onClick="traveller"
                android:text="   From INR \n92,753\n \nview"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/inria_sans"
            android:onClick="backandeco"
            android:text="Back"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>